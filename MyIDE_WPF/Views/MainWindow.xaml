<Window x:Class="MyIDE_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyIDE_WPF"
        xmlns:v="clr-namespace:MyIDE_WPF.Views"
        xmlns:vm="clr-namespace:MyIDE_WPF.ViewModels"
        xmlns:p="clr-namespace:MyIDE_WPF.Properties"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="{Binding Source={x:Static p:Settings.Default}, Path=Height, Mode=TwoWay}"
        Width="{Binding Source={x:Static p:Settings.Default}, Path=Width, Mode=TwoWay}"
        FontFamily="{Binding Source={x:Static p:Settings.Default}, Path=CodeFontFamily}"
        FontSize="{Binding Source={x:Static p:Settings.Default}, Path=CodeFontSize}"
        WindowState="{Binding Source={x:Static p:Settings.Default}, Path=WindowState, Mode=TwoWay}" Loaded="Window_Loaded">
    <Window.InputBindings>
        <KeyBinding Command="{Binding RunCommand}" Key="F5"/>
        <KeyBinding Command="{Binding StepCommand}" Key="F10"/>
        <KeyBinding Command="{Binding StepCommand}" Key="F11"/>
    </Window.InputBindings>
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10,10,10,5">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,0,10,0"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Start (F5)" Command="{Binding RunCommand}"></Button>
            <Button Content="Step (F10)" Command="{Binding StepCommand}"></Button>
            <Button Content="Stop" Command="{Binding StopCommand}"></Button>
            <Button Content="Font +" Command="{Binding IncreaseFontSizeCommand}"></Button>
            <Button Content="Font -" Command="{Binding DecreaseFontSizeCommand}"></Button>
        </StackPanel>
        <v:ProgramCodeView Grid.Row="1" Grid.Column="0" DataContext="{Binding ProgramCode}"
                           Margin="10,5,5,10" Background="White"/>
        <v:ProgramInteractionView Grid.Row="1" Grid.Column="1" DataContext="{Binding ProgramInteraction}"
                                  Margin="5,5,10,10" Background="White">
            <v:ProgramInteractionView.Style>
                <Style TargetType="v:ProgramInteractionView">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding .}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </v:ProgramInteractionView.Style>
        </v:ProgramInteractionView>
    </Grid>
</Window>
